<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_lugares"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:background="@drawable/lugares_dw"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="10px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productosComprasLayout">
        <TextView
            android:id="@+id/nombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10px"
            android:layout_marginLeft="10px"
            android:paddingLeft="10px"
            android:text="Nombre del producto"/>

        <TextView
            android:id="@+id/descripcionProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/nombreProducto"
            android:layout_margin="10px"
            android:layout_marginLeft="10px"
            android:paddingLeft="3dp"
            android:text="DescripciÃ³n del producto"
            android:textColor="@color/colorGrayText"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/idProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ubicacionLugar"
            android:layout_margin="10px"
            android:layout_marginLeft="10px"
            android:paddingLeft="10px"
            android:text="id del lugar"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>