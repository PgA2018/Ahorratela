<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_producto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/left_right_margin_layout"
    android:layout_marginLeft="@dimen/left_right_margin_layout"
    android:padding="3dp">

    <TextView
        android:id="@+id/nombreproductlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10px"
        android:layout_marginLeft="10px"
        android:paddingLeft="10px"
        android:text="Nombre del producto"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/precioProductoLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/nombreproductlbl"
        android:layout_margin="10px"
        android:layout_marginLeft="10px"
        android:paddingLeft="10px"
        android:text="Precio"
        android:textColor="@color/colorGrayText"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/idProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/precioProductoLBL"
        android:layout_margin="10px"
        android:layout_marginLeft="10px"
        android:paddingLeft="10px"
        android:text="id del lugar"
        android:textSize="15sp"
        android:visibility="gone" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/eliminarproducto"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10px"
        android:src="@drawable/ic_delete" />


</RelativeLayout>